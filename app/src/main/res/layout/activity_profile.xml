<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Content -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="672dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/im_avatar"
                android:layout_width="113dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_profile"></ImageView>

            <Button
                android:id="@+id/btn_ChooseAvatar"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:text="Choose avatar"></Button>

            <Button
                android:id="@+id/btn_UploadAvatar"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center"
                android:text="Upload Avatar"></Button>

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="174dp"
                    android:layout_height="46dp"
                    android:text="Name:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tv_Name"
                    android:layout_width="200dp"
                    android:layout_height="46dp"
                    android:text="NguyenThienTuyen"
                    android:textSize="20sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="174dp"
                    android:layout_height="46dp"
                    android:text="IdCard: "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tv_IdCard"
                    android:layout_width="200dp"
                    android:layout_height="46dp"
                    android:text="ID"
                    android:textSize="20sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="174dp"
                    android:layout_height="46dp"
                    android:text="Gmail:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tv_Gmail"
                    android:layout_width="200dp"
                    android:layout_height="46dp"
                    android:text="Gmail"
                    android:textSize="20sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="174dp"
                    android:layout_height="46dp"
                    android:text="eWallet"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tv_eWallet"
                    android:layout_width="200dp"
                    android:layout_height="46dp"
                    android:text="eWallet"
                    android:textSize="20sp"></TextView>
            </LinearLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="Logout"></Button>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
    <include layout="@layout/activity_bottom_app_bar"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
